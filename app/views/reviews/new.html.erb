<div class="container-md">
  <div class="row justify-content-center">
    <div class="col col-md-8 mt-5">
    <h1 class="h2 text-center">Add a review for <%= @restaurant.name %></h1>
    <%= render "form", review: @review %>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
    <%= link_to "go back to #{@restaurant.name}", restaurant_path(@restaurant), class: "d-block mt-2" %>
    </div>
  </div>
</div>
